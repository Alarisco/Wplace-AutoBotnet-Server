---
// Connected slaves panel with master toggle and logs
---

<div class="panel">
  <div class="panel-header-with-toggle">
    <h2 class="text-heading">Connected Slaves</h2>
    <label class="switch">
      <input type="checkbox" id="toggle-all-slaves">
      <span class="switch__track"></span>
      <span class="switch__thumb"></span>
    </label>
  </div>

  <div class="panel__content">

    <!-- Slaves list -->
    <div id="slaves-list" class="slaves-list">
      No slaves connected. Inject Auto-Slave.js in your browser.
    </div>

    <!-- Activity Logs under Slaves with collapsible animation -->
    <div class="logs-section">
      <details id="logs-section" class="logs-details">
        <summary class="logs-summary">Activity Logs</summary>
        <div id="logs-container" class="logs-container"></div>
      </details>
    </div>
  </div>
</div>

<!-- Styles específicos para SlavesPanel -->
<style>
  .panel-header-with-toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-4);
  }
  
  .slaves-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    overflow-y: auto;
    max-height: 960px;
    padding-right: var(--space-1);
    margin: var(--space-4) 0;
  }
  
  .logs-section {
    margin-top: var(--space-4);
    border-top: 1px solid hsl(var(--border));
    padding-top: var(--space-4);
  }
  
  .logs-details {
    group: true;
  }
  
  .logs-summary {
    color: hsl(var(--muted-foreground));
    font-size: var(--text-sm);
    cursor: pointer;
    user-select: none;
    list-style: none;
    display: flex;
    align-items: center;
    gap: var(--space-2);
    transition: color var(--duration-200) var(--ease-out);
  }
  
  .logs-summary:hover {
    color: hsl(var(--foreground));
  }
  
  .logs-summary::-webkit-details-marker {
    display: none;
  }
  
  .logs-summary::before {
    content: '▶';
    transition: transform var(--duration-200) var(--ease-out);
    font-size: var(--text-xs);
    color: hsl(var(--muted-foreground));
  }
  
  .logs-details[open] .logs-summary::before {
    transform: rotate(90deg);
  }
  
  .logs-container {
    margin-top: var(--space-2);
    font-size: var(--text-xs);
    color: hsl(var(--muted-foreground));
    max-height: 300px;
    overflow-y: auto;
    white-space: pre-wrap;
    background-color: hsl(var(--card));
    padding: var(--space-3);
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius-md);
    font-family: var(--font-mono);
  }
</style>
