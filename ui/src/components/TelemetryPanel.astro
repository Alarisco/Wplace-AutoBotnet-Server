---
// Real-time Telemetry panel
---

<div class="panel animate-slide-up">
  <h2 class="text-heading" style="margin-bottom: var(--space-6); color: hsl(var(--foreground));">Real-time Telemetry</h2>
  
  <div class="telemetry-sections">
    <!-- Sección: Canvas Status -->
    <div class="telemetry-section">
      <h3 class="telemetry-section__title">🎨 Canvas Status</h3>
      <div class="telemetry-grid">
        <div class="card card--telemetry card--success">
          <div class="card__icon">✅</div>
          <div class="card__value" id="repaired-pixels">0</div>
          <div class="card__label">Repaired</div>
        </div>
        <div class="card card--telemetry card--warning">
          <div class="card__icon">❌</div>
          <div class="card__value" id="incorrect-pixels">0</div>
          <div class="card__label">Incorrectos</div>
        </div>
        <div class="card card--telemetry card--danger">
          <div class="card__icon">⚪</div>
          <div class="card__value" id="missing-pixels">0</div>
          <div class="card__label">Faltantes</div>
        </div>
      </div>
    </div>
    
    <!-- Sección: Resources -->
    <div class="telemetry-section">
      <h3 class="telemetry-section__title">⚡ Resources</h3>
      <div class="card card--telemetry card--primary">
        <div class="card__icon">🔋</div>
        <div class="card__value" id="remaining-charges">0/0</div>
        <div class="card__label">Charges</div>
        <div class="card__sublabel">Available / Total Capacity</div>
      </div>
    </div>
  </div>
  
  <!-- Progress -->
  <div style="margin-top: var(--space-6);">
    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: var(--space-2);">
      <span class="text-caption text-muted">Progress (latest preview)</span>
      <span id="overall-progress-label" class="text-caption text-muted">0%</span>
    </div>
    <div class="progress">
      <div id="overall-progress-bar" class="progress__bar" style="width:0%"></div>
    </div>
  </div>
</div>
