---
// Main dashboard page - Rediseño minimalista
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import SlavesPanel from "../components/SlavesPanel.astro";
import ConfigPanel from "../components/ConfigPanel.astro";
import ControlPanel from "../components/ControlPanel.astro";
import TelemetryPanel from "../components/TelemetryPanel.astro";
import PreviewPanel from "../components/PreviewPanel.astro";
import ProjectsList from "../components/ProjectsList.astro";
---

<Layout title="WPlace Master Dashboard">
  <!-- Header -->
  <Header />

  <!-- Main content area -->
  <div style="min-height: 100vh; background-color: hsl(var(--background));">
    <div class="container" style="padding: var(--space-6);">
      <!-- Single responsive grid to avoid duplicates -->
  <div class="dashboard-grid">
        <!-- Orden semántico móvil: Control → Slaves → Telemetry → Preview → Config → Projects -->
        <section class="area-control"><ControlPanel /></section>
        <section class="area-slaves"><SlavesPanel /></section>
        <section class="area-telemetry"><TelemetryPanel /></section>
        <section class="area-preview"><PreviewPanel /></section>
        <section class="area-config"><ConfigPanel /></section>
        <section class="area-projects"><ProjectsList /></section>
      </div>
    </div>
  </div>

  <!-- Modal de confirmación -->
  <div id="confirm-modal" class="modal" style="display: none;">
    <div class="modal__overlay" id="modal-overlay"></div>
    <div class="modal__content">
      <h3 class="modal__title" id="modal-title">⚠️ Confirm Action</h3>
      <p class="modal__message" id="modal-message"></p>
      <div class="modal__actions">
        <button class="btn btn--secondary" id="modal-cancel">Cancel</button>
        <button class="btn btn--danger" id="modal-confirm">Confirm</button>
      </div>
    </div>
  </div>

  <!-- Responsive layout styles -->
  <style>
    .container {
      max-width: 1400px;
      margin-left: auto;
      margin-right: auto;
      padding-left: var(--space-4);
      padding-right: var(--space-4);
    }
    @media (min-width: 640px) {
      .container { padding-left: var(--space-6); padding-right: var(--space-6); }
    }

    /* Responsive dashboard grid using grid-areas (one source of truth) */
    .dashboard-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: var(--space-5);
      grid-template-areas:
        "control"
        "slaves"
        "telemetry"
        "preview"
        "config"
        "projects";
    }
    .area-control { grid-area: control; }
    .area-preview { grid-area: preview; }
    .area-telemetry { grid-area: telemetry; }
    .area-config { grid-area: config; }
    .area-slaves { grid-area: slaves; }
    .area-projects { grid-area: projects; }

    @media (min-width: 1024px) {
      .dashboard-grid {
        grid-template-columns: 1fr 2fr;
        column-gap: var(--space-6);
        row-gap: var(--space-2);
        grid-template-areas:
          "control telemetry"
          "slaves  preview"
          "config  preview"
          "projects preview";
      }
    }
  </style>

  <!-- Cargar dashboard bootstrap -->
  <script type="module" src="/js/dashboard.js"></script>
</Layout>